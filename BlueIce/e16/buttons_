A(CONFIG_CLEANSLIDE_TOGGLE, ACTION_CONFIG_CLEANSLIDE_TOGGLE, 80, 256)
A(CONFIG_DRAGDIR_TOGGLE, ACTION_CONFIG_DRAGDIR_TOGGLE, 80, 296)
A(CONFIG_DRAGORDER_TOGGLE, ACTION_CONFIG_DRAGORDER_TOGGLE, 80, 336)
